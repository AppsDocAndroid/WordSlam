<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout
				android:id="@+id/linearLayout1"
				android:layout_height="fill_parent"
				android:layout_width="fill_parent"
				android:layout_weight="1" android:padding="5dp">
				<LinearLayout
						android:id="@+id/linearLayout2"
						android:layout_height="match_parent"
						android:orientation="vertical"
						android:layout_width="match_parent"
						android:layout_weight="1"
						android:layout_marginRight="2dp">
						<TextView
								android:layout_height="wrap_content"
								android:layout_width="match_parent"
								android:gravity="center"
								android:text="@string/ResultsWordsFound"
								android:layout_marginBottom="3dp"
								android:textStyle="bold"
								android:textColor="#339933"
								android:id="@+id/tvWordsFoundTitle"></TextView>
						<ScrollView
								android:id="@+id/ScrollView01"
								android:layout_width="match_parent"
								android:fillViewport="true" android:layout_height="200dp">
								<TextView
										android:layout_width="match_parent"
										android:background="@drawable/back"
										android:scrollbars="vertical"
										android:gravity="center"
										android:textColor="#339933"
										android:id="@+id/tvWordsFoundList" android:layout_height="fill_parent" android:layout_marginLeft="4dp" android:layout_marginRight="4dp" android:scrollbarStyle="insideOverlay" android:scrollbarAlwaysDrawVerticalTrack="true"></TextView>
						</ScrollView>
						<LinearLayout android:gravity="center" android:layout_width="fill_parent" android:layout_weight="1" android:id="@+id/linearLayout4" android:layout_height="30dp" android:layout_marginTop="5dp">
							<TextView android:id="@+id/textView1" android:layout_width="wrap_content" android:text="@string/score" android:layout_marginRight="5dp" android:layout_height="wrap_content"></TextView>
							<TextView android:id="@+id/tvScore" android:layout_width="60dp" android:padding="2dp" android:background="@drawable/back" android:layout_height="25dp"></TextView>
							<TextView android:id="@+id/tvBonus" android:layout_width="75dp" android:layout_height="35dp" android:layout_marginLeft="5dp" android:background="@drawable/bonus2"></TextView>
						</LinearLayout>
				</LinearLayout>
				<LinearLayout
						android:id="@+id/linearLayout3"
						android:layout_height="match_parent"
						android:orientation="vertical"
						android:layout_width="match_parent"
						android:layout_weight="1" android:gravity="center">
						<TextView
								android:layout_height="wrap_content"
								android:layout_width="match_parent"
								android:gravity="center"
								android:text="@string/ResultsWordsMissed"
								android:layout_marginBottom="3dp"
								android:textStyle="bold"
								android:textColor="#CC0000"
								android:id="@+id/tvWordsMissedTitle"></TextView>
						<ScrollView
								android:id="@+id/ScrollView02"
								android:layout_width="match_parent"
								android:fillViewport="true"
								android:scrollbarAlwaysDrawVerticalTrack="true" android:layout_height="200dp">
								<TextView
										android:layout_width="match_parent"
										android:background="@drawable/back"
										android:scrollbars="vertical"
										android:scrollbarStyle="insideOverlay"
										android:gravity="center"
										android:textColor="#CC0000"
										android:id="@+id/tvResultsMissedList" android:layout_height="fill_parent" android:layout_marginLeft="4dp" android:layout_marginRight="4dp" android:scrollbarAlwaysDrawVerticalTrack="true"></TextView>
						</ScrollView>
						<Button android:id="@+id/btnMainMenu" android:text="@string/MainMenu" android:layout_width="wrap_content" android:textSize="10dp" android:gravity="center" android:focusable="true" android:layout_height="wrap_content" android:layout_marginTop="10dp"></Button>
				</LinearLayout>
		</LinearLayout>

</LinearLayout>
