<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:weightSum="1" android:padding="5dp">
    <LinearLayout android:id="@+id/linearLayout2" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_weight="0" android:gravity="center">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/MainMenu" android:padding="10dp" android:id="@+id/tvMainMenu" android:textSize="25dp"></TextView>
    </LinearLayout>
		<LinearLayout android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="left|center_vertical" android:layout_weight=".6" android:paddingLeft="10dp">
			<ImageView android:id="@+id/imageView1" android:src="@drawable/stickman" android:adjustViewBounds="true" android:scaleType="fitXY" android:layout_height="wrap_content" android:layout_width="wrap_content"></ImageView>
			<Button android:text="@string/NewOneGame" android:id="@+id/btnNewOneGame" android:maxHeight="30dp" android:layout_height="wrap_content" android:gravity="center" android:layout_width="175dp"></Button>
		</LinearLayout>
		<LinearLayout android:id="@+id/linearLayout3" android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="right|center_vertical" android:layout_weight=".6" android:paddingRight="10dp">
			<Button android:text="@string/NewTwoGame" android:id="@+id/btnNewTwoGame" android:maxHeight="30dp" android:layout_height="wrap_content" android:gravity="center" android:layout_width="175dp"></Button>
			<ImageView android:id="@+id/imageView2" android:layout_height="wrap_content" android:src="@drawable/stickmanleft" android:layout_width="wrap_content" android:adjustViewBounds="true" android:scaleType="fitXY"></ImageView>
			<ImageView android:id="@+id/imageView3" android:layout_height="wrap_content" android:src="@drawable/stickmanright" android:layout_width="wrap_content" android:adjustViewBounds="true" android:scaleType="fitXY"></ImageView>
		</LinearLayout>
		<LinearLayout android:id="@+id/linearLayout4" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="0" android:gravity="left|center_vertical" android:paddingLeft="5dp">
			<ImageView android:src="@drawable/settings" android:id="@+id/imageView4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:adjustViewBounds="true" android:scaleType="fitXY"></ImageView>
			<Button android:layout_height="wrap_content" android:id="@+id/btnSettings" android:gravity="center" android:maxHeight="30dp" android:text="@string/Settings" android:layout_marginLeft="10dp" android:layout_width="wrap_content"></Button>
		</LinearLayout>

</LinearLayout>
